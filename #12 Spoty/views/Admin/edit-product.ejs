<section>
<div class="signup">
  <h2>Add Product</h2>
<form class="signup__form" method="POST" action="/edit-product/<%= productDetails._id %>">
  <label>Product Tite:</label>
     <input type="text" name="title" required value="<%= productDetails.title %>" >
  <label>Price:</label>
     <input type="text" name="price" required value="<%= productDetails.price %>" >
