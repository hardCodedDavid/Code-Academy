     <textarea name="description" rows="8" cols="80" required ><%= productDetails.description %></textarea>
  <label>Brand:</label>
     <input type="text" name="brand" required value="<%= productDetails.brand %>">
  <label>Product Type:</label>
     <input type="text" name="productType" required value="<%= productDetails.productType %>">
  <label>Product Code:</label>
     <input type="text" name="productCode" required value="<%= productDetails.productCode %>" >
 <label for="homeAddress">Image:</label>
  <input type="text" name="imagePath" value="<%= productDetails.imagePath %>">

  <button type="submit" name="submit">Edit Product</button>
</form>
</div>
